<style>
  .move-button {
    width: 95%;
    background-color: #28a745; /* 緑のボタン */
    color: white;
    border: none;
    padding: 10px;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
    margin-top: 10px;
  }

  .move-button:hover {
    background-color: #218838; /* 緑のボタンホバーカラー */
  }
</style>

<h1>ユーザー情報</h1>
<% if @user %>
  <p>Name: <%= @user.name %></p>
  <p>Email: <%= @user.email %></p>
  <p>Address: <%= @user.address %></p>
<% else %>
  <p>ユーザー情報が見つかりません。</p>
  
<% end %>

<%= button_to 'ログインページへ移動', '/top/login', method: :get, class: 'move-button' %>